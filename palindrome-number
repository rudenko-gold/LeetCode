// https://leetcode.com/problems/palindrome-number/
// #009

class Solution {
public:
    bool isPalindrome(int x) {
        if (x < 0) {
            return false;
        }
        long long ans = 0;
        int y = x;
        while (y > 0) {
            ans = ans * 10 + y % 10;
            y /= 10;
        }
        return ans == x;
    }
};
